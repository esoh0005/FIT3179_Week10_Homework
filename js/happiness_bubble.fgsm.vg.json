{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "CO2 Emissions & Population",
    "width": 800,
    "height": 600,
    "description": "A scatterplot showing horsepower and miles per gallons for various cars.",
    "data": {
      "url": "world-happiness-report-2021.csv"
    },
    "params": [
      {
        "name": "Population_Above",
        "value": "0",
        "bind": {
          "input": "range",
          "min": 0,
          "max": 15,
          "step": 0.5,
          "name": "Minimum Population"
        }
      }
    ],
    "transform": [
      {"filter": "datum.Logged GDP per capita > 0"},
      {"filter": "datum.Happiness_Score > 0"},
      {"filter": "datum.Happiness_Score > Population_Above"}
    ],
    "mark": "point",
    "encoding": {
      "x": {
        "field": "Happiness Score",
        "type": "quantitative",
        "axis": {"tickCount": 7},
        "scale": {"type": "log", "domain": [2, 10]}
      },
      "y": {
        "field": "Logged GDP per capita",
        "type": "quantitative",
        "axis": {"tickCount": 7},
        "scale": {"type": "log", "domain": [7, 12]}
      },
      "tooltip": [
        {"field": "Country name", "type": "nominal"},
        {"field": "Logged GDP per capita", "type": "quantitative"},
        {"field": "Happiness_Score", "type": "quantitative"}
      ]
    }
  }